using System.Collections;
using System.Collections.Generic;
using UnityEngine;

[System.Serializable]
public class ContentManagement : MonoBehaviour
{
    static public int xtwo_in_sent;
    static public int xtwo_in_received;
    static public int xtwo_out_received;
    public void Update()
    {
        switch (SequenceIndicator.xtwo_out_sent)
        {
            case 1:
                xtwo_in_received = 1;
                {
                    if (xtwo_in_sent != 1)
                    {
                        xtwo_out_received = 0;
                    }
                    else if (xtwo_in_sent == 1)
                    {
                        xtwo_out_received = 1;
                    }
                }
                break;

            case 2:
                xtwo_in_received = 2;
                {
                    if (xtwo_in_sent != 2)
                    {
                        xtwo_out_received = 0;
                    }
                    else if (xtwo_in_sent == 2)
                    {
                        xtwo_out_received = 2;
                    }
                }
                break;

            case 3:
                xtwo_in_received = 3;
                {
                    if (xtwo_in_sent != 3)
                    {
                        xtwo_out_received = 0;
                    }
                    else if (xtwo_in_sent == 3)
                    {
                        xtwo_out_received = 3;
                    }
                }
                break;

            case 4:
                xtwo_in_received = 4;
                {
                    if (xtwo_in_sent != 4)
                    {
                        xtwo_out_received = 0;
                    }
                    else if (xtwo_in_sent == 4)
                    {
                        xtwo_out_received = 4;
                    }
                }
                break;
        }
    }
}
