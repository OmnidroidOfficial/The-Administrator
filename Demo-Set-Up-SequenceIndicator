using System.Collections;
using System.Collections.Generic;
using Unity.VisualScripting;
using UnityEngine;
using UnityEngine.UI;

public class SequenceIndicator : MonoBehaviour
{
    static public int xone_indicator;
    static public int xtwo_out_sent;
    public Text xone_sequence;
    
    void Start()
    {
        xtwo_out_sent = 0;
    }

    void Update()
    {
        for (xone_indicator = 0; (xone_indicator <= 5); xone_indicator++)
        {
            do
            {
                xtwo_out_sent = xone_indicator;
                xone_sequence.text = "Executing C0P" + xone_indicator;
            }
            while (ContentManagement.xtwo_out_received != xtwo_out_sent);
        }

        if (xone_indicator == 5)
        {
            xone_sequence.text = "End of demo.";
            ContentManagement.xtwo_out_received = 5;
        }
    }
}
